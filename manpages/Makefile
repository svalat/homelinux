######################################################
RONN=ronn
TARGETS=hl.1.bz2 hl.1.html hl-config.5.bz2 hl-config.5.html
RM=rm -f
BZIP2=bzip2

######################################################
all: $(TARGETS)

######################################################
clean:
	$(RM) $(TARGETS)

######################################################
%.1.bz2: %.1.ronn
	$(RONN) -r --pipe $< | $(BZIP2) > $@

######################################################
%.1.html: %.1.ronn
	$(RONN) -5 $<
	
######################################################
%.5.bz2: %.5.ronn
	$(RONN) -r --pipe $< | $(BZIP2) > $@

######################################################
%.5.html: %.5.ronn
	$(RONN) -5 $<

######################################################
.PHONY: all clean