{
	"name": "sys-process/htop",
	"homepage": "http://hisham.hm/htop",
	"inherit": "models/autotools",
	"versions": [ 
		"1.0.3" 
	],
	"vfetcher": {
		"mode": "http",
		"url": "http://hisham.hm/htop/releases/",
		"regexp": "([0-9]+.[0-9]+.?[0-9]*)/"
	},
	"md5" : {},
	"subdir": "htop-${VERSION}",
	"urls" : [
		"http://hisham.hm/htop/releases/${VERSION}/htop-${VERSION}.tar.gz"
	],
	"deps": [
		"sys-libs/ncursesw"
	],
	"flags": {
		"LDFLAGS": [ "-L$(hl prefix-of sys-libs/ncurses)/lib" ],
		"CFLAGS": [ "-I$(hl prefix-of sys-libs/ncurses)/include" ]
	},
	"host": {
		"default": false,
		"debian8": [ "htop" ],
		"centos7": [ "htop" ],
		"gentoo": [ "sys-process/htop" ]
	}
}
