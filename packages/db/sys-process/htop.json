{
	"name": "sys-apps/htop",
	"homepage": "http://hisham.hm/htop",
	"inherit": "models/autotools",
	"versions": [ 
		"1.0.3" 
	],
	"vfetcher": {
		"mode": "http",
		"url": "http://hisham.hm/htop/releases/",
		"regexp": "^([0-9]+\\.[0-9]+\\.?[0-9]*)/$"
	},
	"md5" : {},
	"subdir": "htop-${VERSION}",
	"urls" : [
		"http://hisham.hm/htop/releases/${VERSION}/htop-${VERSION}.tar.gz"
	],
	"deps": [
		"dev-libs/ncurses"
	],
	"configure": {
		"": [ "LDFLAGS=-L$(hl_prefix dev-libs/ncurses)/lib" ]
	},
	"host": {
		"default": false,
		"debian8": "htop"
	}
}
