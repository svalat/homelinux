{
	"name": "dev-qt/assistant",
	"homepage": "https://www.qt.io/",
	"inherit": "models/autotools",
	"versions": [ 
		"4.8.7" 
	],
	"vfetcher": {
		"mode": "http",
		"url": "http://download.qt.io/archive/qt/4.8/",
		"regexp": "^([0-9]+\\.[0-9]+\\.?[0-9]*\\.?[0-9]*)/"
	},
	"md5" : {},
	"subdir": "qt-everywhere-opensource-src-${VERSION}",
	"urls" : [
		"http://download.qt.io/archive/qt/$(echo $VERSION | cut -d '.' -f 1-2)/${VERSION}/qt-everywhere-opensource-src-${VERSION}.tar.gz"
	],
	"deps": [
	    "dev-qt/qtcore :4[#aqua,#debug]",
    	"dev-qt/qtgui[#aqua,#debug]",
	    "dev-qt/qthelp[#aqua,#debug]",
	    "dev-qt/qtsql[#aqua,#debug,sqlite]",
	    "webkit? dev-qt/qtwebkit[#aqua,#debug]"
	],
	"configure": {
	    "gentoo": [ 
	        "-system-libpng",
	        "-system-libjpeg",
	        "-system-zlib",
	        "-no-sql-mysql",
	        "-no-sql-psql",
	        "-no-sql-ibase",
	        "-no-sql-sqlite2",
	        "-no-sql-odbc",
	        "-sm",
	        "-xshape",
	        "-xsync",
	        "-xcursor",
	        "-xfixes",
	        "-xrandr",
	        "-xrender",
	        "-mitshm",
	        "-xinput",
	        "-xkb",
		    "-fontconfig",
		    "-no-multimedia",
		    "-no-opengl",
		    "-no-phonon",
		    "-no-svg",
		    "-no-xmlpatterns"
		]
	    "webkit": [ "--$enable-webkit" ]
	}
	"host": {
		"default": false,
		"debian8": [ "assistant" ]
	}
}
