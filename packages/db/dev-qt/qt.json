{
	"name": "dev-qt/qt",
	"homepage": "https://www.qt.io/",
	"inherit": "models/autotools",
	"versions": [ 
		"4.8.6" 
	],
	"vfetcher": {
		"mode": "http",
		"url": "http://download.qt.io/archive/qt/4.8/",
		"regexp": "^([0-9]+\\.[0-9]+\\.?[0-9]*\\.?[0-9]*)/"
	},
	"md5" : {},
	"subdir": "qt-everywhere-opensource-src-${VERSION}",
	"urls" : [
		"http://download.qt.io/archive/qt/$(echo $VERSION | cut -d '.' -f 1-2)/${VERSION}/qt-everywhere-opensource-src-${VERSION}.tar.gz"
	],
	"deps": [
		"sqlite? dev-db/sqlite",
		"sys-libs/zlib",
		"media-libs/tiff",
		"media-libs/libpng",
		"media-libs/libmng",
		"media-libs/jpeg",
		"dev-libs/openssl",
		"media-libs/fontconfig",
		"media-libs/freetype",
		"cups? net-print/cups",
		"iconv? virtual/libiconv",
		"dbus? sys-apps/dbus",
		"sm? x11-apps/xsm",
		"sm? x11-libs/libICE",
		"xshape? x11-libs/libXext",
		"xvideo? x11-libs/libX11",
		"xsync? x11-libs/libXext",
		"xinerama? x11-libs/libXinerama",
		"xcursor? x11-libs/libXcursor",
		"xfixes? x11-libs/libXfixes",
		"xrandr? x11-libs/libXrandr",
		"xrender? x11-libs/libXrender",
		"mitshm? x11-libs/libXext",
		"xinput? x11-apps/xinput",
		"glib? dev-libs/glib :2",
		"gtkstyle? x11-libs/cairo",
		"gtkstyle? x11-libs/gtk+ :2",
		"egl? media-libs/mesa[egl]",
		"nas? media-libs/nas"
	],
	"configure": {
		"": [
			"-opensource",
			"-release",
			"-confirm-license",
			"-system-zlib",
			"-system-libtiff",
			"-system-libpng",
			"-system-libmng",
			"-system-libjpeg",
			"-openssl",
			"-fontconfig"
		],
		"+debug": [ "-debug" ],
		"-debug": [ "-release" ],
		"-static": [ "-shared" ],
		"+static": [ "-static" ],
		"largefile": [ "-$no-largefile" ],
		"exceptions": [ "-$no-exceptions" ],
		"accessibility": [ "-$no-accessibility" ],
		"sqlite": [ "-system-sqlite" ],
		"qt3support": [ "-$no-qt3support" ],
		"xmlpatterns": [ "-$no-xmlpatterns" ],
		"multimedia": [ "-$no-multimedia" ],
		"audio-backend": [ "-$no-audio-backend" ],
		"phonon": [ "-$no-phonon", "-$no-phonon-backend" ],
		"svg": [ "-$no-svg" ],
		"webkit": [ "-$no-webkit" ],
		"+webkit&+debug": [ "-webkit-debug" ],
		"script": [ "-$no-javascript", "-$no-jit-script", "-$no-scripttools" ],
		"nis": [ "-$no-nis" ],
		"cups": [ "-$no-cups" ],
		"iconv": [ "-$no-iconv" ],
		"pch": [ "-$no-pch" ],
		"dbus": [ "-$no-dbus" ],
		"gtk": [ "-$no-gtkstyle" ],
		"-nas": [ "-no-nas-sound" ],
		"+nas": [ "-system-nas-sound" ],
		"+egl": [ "-egl" ],
		"-opengl": [ "-no-opengl" ],
		"+opengl": [ "-opengl", "desktop" ],
		"openvg&egl": [ "-$no-openvg" ],
		"sm" : [ "-$no-sm" ],
		"xshape": [ "-$no-xshape" ],
		"xvideo": [ "-$no-xvideo" ],
		"xsync": [ "-$no-xsync" ],
		"xinerama": [ "-$no-xinerama" ],
		"xcursor": [ "-$no-xcursor" ],
		"xfixes": [ "-$no-xfixes" ],
		"xrandr": [ "-$no-xrandr" ],
		"xrender": [ "-$no-xrender" ],
		"mitshm": [ "-$no-mitshm" ],
		"xinput": [ "-$no-xinput" ],
		"xkb": [ "-$no-xkb" ],
		"glib": [ "-$no-glib" ]
	},
	"host": {
		"default": false,
		"debian8": [ "qt4" ]
	},
	"use" : [
		"-debug",
		"-static",
		"largefile",
		"exceptions",
		"accessibility",
		"sqlite",
		"qt3support",
		"xmlpatterns",
		"multimedia",
		"audio-backend",
		"phonon",
		"svg",
		"webkit",
		"nis",
		"cups",
		"iconv",
		"pch",
		"dbus",
		"gtk",
		"nas",
		"egl",
		"opengl",
		"openvg",
		"sm",
		"aqua",
		"xinerama",
		"xcursor",
		"xfixes",
		"xrandr",
		"xrender",
		"mitshm",
		"xinput",
		"xkb",
		"glib",
		"xvideo",
		"xsync",
		"xshape",
		"gtkstyle"
	],
	"slots": {
        "~": "^([0-9]+).[0-9]+"
	}
}
