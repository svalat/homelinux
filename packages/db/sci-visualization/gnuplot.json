{
	"name": "sci-visualization/gnuplot",
	"homepage": "http://www.gnuplot.info/",
	"versions": [
		"5.0.3"
	],
	"inherit": "models/autotools",
	"vfetcher": {
		"mode": "http",
		"url": "https://sourceforge.net/projects/gnuplot/files/gnuplot/",
		"regexp": "([0-9]+.[0-9]+.?[0-9]*.?[0-9]*)"
	},
	"md5": {},
	"subdir": "gnuplot-${VERSION}",
	"urls": [
		"sourceforge://gnuplot/gnuplot/${VERSION}/gnuplot-${VERSION}.tar.gz"
	],
	"deps": [
		"cairo? x11-libs/cairo",
		"cairo? x11-libs/pango",
		"cairo&gd? media-libs/gd[png] :2",
		"cairo&ggi? media-libs/libggi",
		"latex? virtual/latex-base",
		"cairo&latex&lua? dev-tex/pgf",
		"latex? dev-texlive/texlive-latexrecommended",
		"qt4? dev-qt/qt:4",
		"libcaca? media-libs/libcaca",
		"lua? dev-lang/lua:0",
		"readline? sys-libs/readline:0",
		"libcerf? sci-libs/libcerf",
		"svga? media-libs/svgalib",
		"wxwidgets? x11-libs/wxGTK[X] :3.0",
		"cairo? x11-libs/cairo",
		"cairo? x11-libs/pango",
		"gtk? x11-libs/gtk+:2",
		"virtual/pkgconfig",
		"X? x11-libs/libXaw",
		"doc? virtual/latex-base",
		"doc? dev-texlive/texlive-latexextra",
		"doc? app-text/ghostscript-gpl",
		"cairo&gd? media-libs/gd[png] :2",
		"ggi? media-libs/libggi",
		"latex? virtual/latex-base",
		"lua? dev-tex/pgf",
		"latex? dev-texlive/texlive-latexrecommended-2008-r2"
	],
	"flags": {
		"LDFLAGS": [ 
			"-L$(hl prefix-of dev-libs/libiconv)/lib", 
			"-liconv" 
		]
	},
	"configure": {
		"": [
			"--enable-stats"
		],
		"-readline": [
			"builtin"
		],
		"bitmap": [
			"--$with-bitmap-terminals="
		],
		"cairo": [
			"--$with-cairo"
		],
		"compat": [
			"--$enable-backwards-compatibility"
		],
		"doc": [
			"--$with-tutorial="
		],
		"gd": [
			"--$with-gd"
		],
		"ggi": [
			"--$with-ggi=/usr/",
			"--$with-xmi=/usr/"
		],
		"libcaca": [
			"--$with-caca=/usr/"
		],
		"libcerf": [
			"--$with-libcerf"
		],
		"lua": [
			"--$with-lua"
		],
		"svga": [
			"--$with-linux-vga="
		],
		"X": [
			"--$with-x="
		],
		"qt4": [
			"--$with-qt=qt4"
		],
		"wxwidgets": [
			"--$enable-wxwidgets"
		]
	},
	"use": [
		"aqua",
		"bitmap",
		"cairo",
		"compat",
		"doc",
		"examples",
		"+gd",
		"ggi",
		"gtk",
		"latex",
		"libcaca",
		"libcerf",
		"lua",
		"qt4",
		"readline",
		"svga",
		"wxwidgets",
		"X",
		"-TODO"
	],
	"host": {
		"default": false,
		"debian8": [
			"gnuplot"
		],
		"centos7": [ "gnuplot" ],
		"gentoo": [ "sci-visualization/gnuplot" ]
	}
}
