{
	"name": "sys-devel/lld",
	"homepage": "http://llvm.org/",
	"versions": [
		"4.0.0"
	],
	"inherit": "models/virtual",
	"TODO": "Find a solution to crawl the script in html page",
	"vfetcher": {
		"mode": "dummy",
		"url": "http://releases.llvm.org/",
		"regexp": "lld-([0-9]+\\.[0-9]+\\.?[0-9]*\\.?[0-9]*).(tar.bz2|tar.gz|tbz|tar.xz)"
	},
	"md5": {},
	"subdir": "lld-${VERSION}",
	"urls": [
		"http://releases.llvm.org/${VERSION}/lld-${VERSION}.src.tar.xz"
	],
	"deps": [
		"sys-devel/llvm[lld]"
	],
	"vspecific": {
		":4.0": {
			"deps": [
				"sys-devel/llvm[lld] :4.0"
			]
		}
	},
	"configure": {
	},
	"use": [
	],
	"slots": {
		"~": "^([0-9]+.[0-9]+).[0-9]+"
	},
	"module": "clang-${SLOT}",
	"host": {
		"default": false,
		"debian8": [
			"lld"
		],
		"centos7": false,
		"gentoo": [
			"sys-devel/lld"
		]
	}
}
