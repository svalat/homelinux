{
	"name": "dev-lang/ruby",
	"homepage": "http://www.ruby-lang.org/",
	"versions": [
		"2.3.0"
	],
	"inherit": "models/autotools",
	"vfetcher": {
		"mode": "http",
		"url": "https://cache.ruby-lang.org/pub/ruby/",
		"regexp": "ruby-([0-9]+\\.[0-9]+\\.?[0-9]*\\.?[0-9]*).(tar.bz2|tar.gz|tbz|tar.xz)"
	},
	"md5": {},
	"subdir": "ruby-${VERSION}",
	"urls": [
		"https://cache.ruby-lang.org/pub/ruby/ruby-${VERSION}.tar.bz2"
	],
	"deps": [
		"berkdb? sys-libs/db",
		"gdbm? sys-libs/gdbm",
		"jemalloc? dev-libs/jemalloc",
		"ssl&-libressl? dev-libs/openssl :0",
		"ssl&libressl? dev-libs/libressl",
		"socks5? net-proxy/dante",
		"ncurses? sys-libs/ncurses :0",
		"readline? sys-libs/readline :0",
		"dev-libs/libyaml",
		"virtual/libffi",
		"sys-libs/zlib"
	],
	"configure": {
		"": [
			"--with-soname=ruby",
			"--enable-shared",
			"--enable-pthread",
			"--disable-rpath",
			"--with-out-ext=tk",
			"--enable-ipv6",
			"--enable-option-checking=no"
		],
		"jemalloc": [
			"--$enable-jemalloc"
		],
		"socks5": [
			"--$enable-socks"
		],
		"doc": [
			"--$enable-install-doc"
		],
		"debug": [
			"--$enable-debug"
		]
	},
	"use": [
		"berkdb",
		"debug",
		"doc",
		"examples",
		"gdbm",
		"ipv6",
		"jemalloc",
		"libressl",
		"+rdoc",
		"rubytests",
		"socks5",
		"ssl",
		"xemacs",
		"ncurses",
		"+readline"
	],
	"host": {
		"default": false,
		"debian8": [
			"ruby"
		]
	}
}
