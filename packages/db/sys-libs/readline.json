{
	"name": "sys-libs/readline",
	"homepage": "http://cnswww.cns.cwru.edu/php/chet/readline/rltop.html",
	"inherit": "models/autotools",
	"versions": [ 
		"6.3"
	],
	"vfetcher": {
		"mode": "ftp",
		"url": "ftp://ftp.gnu.org/pub/gnu/readline/",
		"regexp": "readline-([0-9]+\\.[0-9]+\\.?[0-9]*\\.?[0-9]*).tar.gz"
	},
	"md5" : {},
	"subdir": "readline-${VERSION}",
	"urls" : [
		"ftp://ftp.gnu.org/pub/gnu/readline/readline-${VERSION}.tar.gz"
	],
	"deps": [
		
	],
	"configure": {
		"": [ "--enable-widec" ]
	},
	"host": {
		"default": true,
		"debian8": [ "libreadline-dev" ],
		"centos7": [ "readline", "readline-devel" ]
	}
}
