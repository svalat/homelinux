{
	"name": "dev-libs/libpcre",
	"homepage": "http://www.pcre.org/",
	"versions": [
		"8.38"
	],
	"inherit": "models/autotools",
	"vfetcher": {
		"mode": "ftp",
		"url": "ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/",
		"regexp": "libpcre-([0-9]+\\.[0-9]+\\.?[0-9]*\\.?[0-9]*).(tar.bz2|tar.gz|tbz|tar.xz)"
	},
	"md5": {},
	"subdir": "pcre-${VERSION}",
	"urls": [
		"ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/pcre-${VERSION}.tar.bz2"
	],
	"deps": [
		"bzip2? app-arch/bzip2",
		"zlib? sys-libs/zlib",
		"libedit? dev-libs/libedit",
		"readline? sys-libs/readline :0",
		"virtual/pkgconfig",
		"userland_GNU? sys-apps/findutils"
	],
	"configure": {
		"": [
			"--enable-pcre8",
			"--enable-shared"
		],
		"-recursion-limit": [
			"--with-match-limit-recursion=8192"
		],
		"cxx": [
			"--$enable-cpp"
		],
		"jit": [
			"--$enable-jit",
			"--$enable-pcregrep-jit"
		],
		"pcre16": [
			"--$enable-pcre16"
		],
		"pcre32": [
			"--$enable-pcre32"
		],
		"static-libs": [
			"--$enable-static"
		],
		"unicode": [
			"--$enable-utf",
			"--$enable-unicode-properties"
		]
	},
	"use": [
		"bzip2",
		"+cxx",
		"+jit",
		"libedit",
		"pcre16",
		"pcre32",
		"+readline",
		"+recursion-limit",
		"static-libs",
		"unicode",
		"zlib",
		"userland_GNU"
	],
	"host": {
		"default": false,
		"debian8": [
			"libpcre"
		]
	}
}
