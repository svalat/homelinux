{
	"api": 1,
	"name": "dev-libs/libpcre2",
	"homepage": "http://www.pcre.org/",
	"versions": [
		"10.23"
	],
	"inherit": "models/autotools",
	"vfetcher": {
		"mode": "html",
		"url": "ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/",
		"regexp": "libpcre2-([0-9]+.[0-9]+.?[0-9]*.?[0-9]*).(tar.bz2|tar.gz|tbz|tar.xz|zip|tbz2)"
	},
	"md5": {},
	"subdir": "libpcre2-${VERSION}",
	"urls": [
		"ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/libpcre2-${VERSION}.tar.bz2"
	],
	"deps": [
		"bzip2? app-arch/bzip2",
		"zlib? sys-libs/zlib",
		"libedit? dev-libs/libedit",
		"readline? sys-libs/readline:0",
		"virtual/pkgconfig",
		"userland_GNU? sys-apps/findutils"
	],
	"configure": {
		"": [
			"--with-match-limit-recursion=@on@+recursion-limit@8192@",
			"--enable-pcre2-8",
			"--enable-shared",
			"--htmldir=/usr/share/doc//html"
		],
		"-recursion-limit": [
			"MATCH_LIMIT"
		],
		"jit": [
			"--$enable-jit",
			"--$enable-pcre2grep-jit"
		],
		"pcre16": [
			"--$enable-pcre2-16"
		],
		"pcre32": [
			"--$enable-pcre2-32"
		],
		"static-libs": [
			"--$enable-static"
		],
		"unicode": [
			"--$enable-unicode"
		]
	},
	"use": [
		"bzip2",
		"+jit",
		"libedit",
		"pcre16",
		"pcre32",
		"+readline",
		"+recursion-limit",
		"static-libs",
		"unicode",
		"zlib",
		"userland_GNU"
	],
	"host": {
		"default": false,
		"debian8": [
			"libpcre2"
		],
		"centos7": [
			"libpcre2"
		],
		"gentoo": [
			"dev-libs/libpcre2"
		]
	}
}
