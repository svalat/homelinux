{
	"name": "dev-libs/libxml2",
	"homepage": "http://www.xmlsoft.org/",
	"inherit": "models/autotools",
	"versions": [ 
		"2.9.2" 
	],
	"vfetcher": {
		"mode": "ftp",
		"url": "ftp://xmlsoft.org/libxml2/",
		"regexp": "libxml2-([0-9]+\\.[0-9]+\\.?[0-9]*\\.?[0-9]*).tar.gz"
	},
	"md5" : {},
	"subdir": "libxml2-${VERSION}",
	"urls" : [
		"ftp://xmlsoft.org/libxml2/libxml2-${VERSION}.tar.gz"
	],
	"deps": [
		"python? dev-lang/python:2"
	],
	"configure": {
		"python": [ 
			"--$with-python=$(hl prefix-of python)",
			"LDFLAGS=-L$(hl prefix-of python)/lib"
		],
		"+python":[	
			"--without-docbook"
		]
	},
	"host": {
		"default": false,
		"debian8": [ "libxml2-dev" ],
		"centos7": [ "libxml2", "libxml2-devel" ],
		"gentoo": [ "dev-libs/libxml2" ]
	},
	"use": [
		"+python"
	]
}
