{
	"name": "app-vim/colorv",
	"homepage": "http://www.vim.org/scripts/script.php?script_id=3597",
	"versions": [
		"3.0.2"
	],
	"inherit": "models/vim",
	"vfetcher": {
		"mode": "http",
		"url": "XXXXXXX",
		"regexp": "colorv-([0-9]+\\.[0-9]+\\.?[0-9]*\\.?[0-9]*).(tar.bz2|tar.gz|tbz|tar.xz)"
	},
	"md5": {},
	"subdir": "colorv.vim-master/",
	"urls": [
		"http://www.vim.org/scripts/download_script.php?src_id=19270"
	],
	"steps": {
		"download": [
			"run wget ${URLS} -O colorv.zip"
		],
		"extract": [
			"run unzip colorv.zip",
			"run rm colorv.zip"
		]
	},
	"deps": [
		"app-editors/vim"
	],
	"configure": {},
	"use": [
		""
	],
	"host": {
		"default": false,
		"debian8": [
			"colorv"
		],
		"centos7": [
			"colorv"
		],
		"gentoo": [
			"app-vim/colorv"
		]
	}
}
