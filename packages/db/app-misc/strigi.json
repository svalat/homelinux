{
	"name": "app-misc/strigi",
	"homepage": "https://projects.kde.org/projects/kdesupport/strigi/strigi",
	"versions": [
		"0.7.8"
	],
	"inherit": "models/cmake",
	"vfetcher": {
		"mode": "gentoo",
		"url": "git://anongit.kde.org/strigi",
		"regexp": "strigi-([0-9]+\\.[0-9]+\\.?[0-9]*\\.?[0-9]*).tar.bz2"
	},
	"md5": {},
	"subdir": "strigi-${VERSION}",
	"urls": [
		"ftp://gentoo.mirrors.ovh.net/gentoo-distfiles/distfiles/strigi-${VERSION}.tar.bz2"
	],
	"deps": [
		"app-arch/bzip2",
		"dev-libs/libxml2:2",
		"sys-libs/zlib",
		"virtual/libiconv",
		"clucene? dev-cpp/clucene[-debug]",
		"dbus? sys-apps/dbus",
		"exif? media-gfx/exiv2",
		"fam? virtual/fam",
		"ffmpeg&libav? media-video/libav :0",
		"ffmpeg&-libav? media-video/ffmpeg :0",
		"log? dev-libs/log4cxx",
		"qt4? dev-qt/qt :4",
		"test? dev-util/cppunit"
	],
	"configure": {
		"": [
			"-DENABLE_POLLING=ON",
			"-DFORCE_DEPS=ON",
			"-DENABLE_REGENERATEXSD=OFF",
			"-DENABLE_XINE=OFF",
			"-DENABLE_DBUS=ON"
		],
		"clucene": [
			"-DENABLE_CLUCENE=$ON",
			"-DENABLE_CLUCENE_NG=$ON"
		],
		"dbus": [
			"-DENABLE_DBUS=$ON"
		],
		"exif": [
			"-DENABLE_EXIV2=$ON"
		],
		"fam": [
			"-DENABLE_FAM=$ON"
		],
		"ffmpeg": [
			"-DENABLE_FFMPEG=$ON"
		],
		"inotify": [
			"-DENABLE_INOTIFY=$ON"
		],
		"log": [
			"-DENABLE_LOG4CXX=$ON"
		],
		"qt4": [
			"-DENABLE_QT4=$ON"
		],
		"test": [
			"-DCMAKE_DISABLE_FIND_PACKAGE_LibCPPUNIT=$OFF"
		]
	},
	"use": [
		"-clucene",
		"+dbus",
		"debug",
		"-exif",
		"-fam",
		"-ffmpeg",
		"+inotify",
		"-libav",
		"-log",
		"+qt4",
		"test"
	],
	"host": {
		"default": false,
		"debian8": [
			"strigi"
		]
	}
}
