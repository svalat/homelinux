{
	"name": "app-editors/vim",
	"homepage": "http://www.vim.org/",
	"inherit": "models/autotools",
	"versions": [ 
		"7.4.827"
	],
	"vfetcher": {
		"mode": "github",
		"url": "github://vim/vim",
		"regexp": "v([0-9]+\\.[0-9]+\\.?[0-9]*\\.?[0-9]*)"
	},
	"md5" : {},
	"subdir": "vim-${VERSION}",
	"urls" : [
		"github://vim/vim"
	],
	"deps": [
		"sys-libs/ncurses",
		"nls? virtual/libintl",
		"acl&kernel_linux? sys-apps/acl",
		"cscope? dev-util/cscope",
		"gpm? sys-libs/gpm",
		"lua&+luajit? dev-lang/luajit :2",
		"lua&-luajit? dev-lang/lua :0[deprecated]",
		"dev-util/ctags",
		"perl? dev-lang/perl",
		"racket? dev-scheme/racket",
		"ruby? dev-lang/ruby",
		"selinux? sys-libs/libselinux",
		"tcl? dev-lang/tcl :0",
		"X? x11-libs/libXt",
		"sys-devel/autoconf",
		"nls? sys-devel/gettext "
	],
	"host": {
		"default": false,
		"debian8": [ "vim" ],
		"centos7": [ "vim" ],
		"gentoo": [ "app-editors/vim" ]
	},
	"configure": {
		"": [
			"CFLAGS=-I$(hl prefix-of ncurses)/include",
			"LDFLAGS=-L$(hl prefix-of ncurses)/lib"
		],
		"python": ["--$enable-pythoninterp"],
		"acl" : [ "--$enable-acl" ],
		"cscope": [ "--$enable-cscope" ],
		"gpm": [ "--$enable-gpm" ],
		"lua": [ "--$enable-luainterp" ],
		"+lua": [ "--with-lua-prefix=${PREFIX}/usr" ],
		"luajit": [ "--$enable-luajit" ],
		"nls": [ "--$enable-nls" ],
		"perl": [ "--$enable-perlinterp" ],
		"racket": [ "--$enable-mzschemeinterp" ],
		"ruby": [ "--$enable√®rubyinterp" ],
		"selinux": [ "--$enable-selinux" ],
		"tcl" : [ "--$enable-tclinterp" ]
	},
	"use": [
		"X",
		"acl",
		"cscope",
		"debug",
		"gpm",
		"lua",
		"luajit",
		"nls",
		"perl",
		"python",
		"racket",
		"ruby",
		"selinux",
		"tcl",
		"vim-pager"
	]
}
