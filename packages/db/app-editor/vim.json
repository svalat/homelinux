{
	"name": "app-editor/vim",
	"homepage": "http://www.vim.org/",
	"inherit": "models/autotools",
	"versions": [ 
		"7.4.827"
	],
	"vfetcher": {
		"mode": "github",
		"url": "vim/vim",
		"regexp": "v([0-9]+\\.[0-9]+\\.?[0-9]*\\.?[0-9]*)"
	},
	"md5" : {},
	"subdir": "vim-${VERSION}",
	"urls" : [
		"https://github.com/vim/vim/archive/v${VERSION}.tar.gz"
	],
	"deps": [
        "sys-libs/ncurses",
	    "nls? virtual/libintl",
	    "acl&kernel_linux? sys-apps/acl",
	    "cscope? dev-util/cscope",
	    "gpm? sys-libs/gpm",
	    "lua&+luajit? dev-lang/luajit :2",
		"lua&-luajit? dev-lang/lua :0[deprecated]",
	    "-minimal? app-editors/vim-core",
	    "-minimal? dev-util/ctags",
	    "perl? dev-lang/perl",
	    "racket? dev-scheme/racket",
	    "ruby? dev-lang/ruby",
	    "selinux? sys-libs/libselinux",
	    "tcl? dev-lang/tcl :0",
	    "X? x11-libs/libXt",
        "sys-devel/autoconf",
	    "nls? sys-devel/gettext "
	],
	"host": {
		"default": false,
		"debian8": [ "vim" ]
	},
	"configure": {
        "+minimal": [
            "--with-features=tiny",
			"--disable-nls",
			"--disable-multibyte",
			"--disable-acl",
			"--enable-gui=no",
			"--without-x",
			"--disable-darwin",
			"--disable-luainterp",
			"--disable-perlinterp",
			"--disable-pythoninterp",
			"--disable-mzschemeinterp",
			"--disable-rubyinterp",
			"--disable-selinux",
			"--disable-tclinterp",
			"--disable-gpm" 
        ],
        "-minimal": [ "--with-features=huge", "--enable-multibyte" ],
        "acl" : [ "--$enable-acl" ],
        "cscope": [ "--$enable-cscope" ],
        "gpm": [ "--$enable-gpm" ],
		"lua": [ "--$enable-luainterp" ],
		"+lua": [ "--with-lua-prefix=${PREFIX}/usr" ],
		"luajit": [ "--$enable-luajit" ],
		"nls": [ "--$enable-nls" ],
		"perl": [ "--$enable-perlinterp" ],
		"racket": [ "--$enable-mzschemeinterp" ],
		"ruby": [ "--$enable√®rubyinterp" ],
		"selinux": [ "--$enable-selinux" ],
		"tcl" : [ "--$enable-tclinterp" ]
	},
	"use": [
        "X",
        "acl",
        "cscope",
        "debug",
        "gpm",
        "lua",
        "luajit",
        "minimal",
        "nls",
        "perl",
        "python",
        "racket",
        "ruby",
        "selinux",
        "tcl",
        "vim-pager"
	]
}
