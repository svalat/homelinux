{
	"name": "app-arch/tar",
	"homepage": "https://www.gnu.org/software/tar/tar.html",
	"inherit": "models/autotools",
	"versions": [ 
		"1.28"
	],
	"vfetcher": {
		"mode": "http",
		"url": "http://ftp.gnu.org/gnu/tar/",
		"regexp": "^tar-([0-9]+\\.[0-9]+\\.?[0-9]*\\.?[0-9]*).tar.gz"
	},
	"md5" : {},
	"subdir": "tar-${VERSION}",
	"urls" : [
		"http://ftp.gnu.org/gnu/tar/tar-${VERSION}.tar.gz"
	],
	"deps": [
		"acl? virtual/acl",
		"selinux? sys-libs/libselinux",
		"nls? sys-devel/gettext",
		"xattr? sys-apps/attr"
	],
	"configure": {
		"+gentoo": [ "--enable-backup-scripts" ],
		"+acl": [ "--$enable-posix-acks" ],
		"+nls": [ "--$enable-nls" ],
		"+selinux": [ "--$enable-selinux" ],
		"+xattr": [ "--$enable-xattrs" ]
	},
	"host": {
		"default": false,
		"debian8": [ "tar" ]
	},
	"useflags": [ 
		"-gentoo",
		"-acl",
		"-selinux",
		"-nls",
		"-xattr"
	]
}
