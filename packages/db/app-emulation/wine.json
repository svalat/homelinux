{
	"name": "app-emulation/wine",
	"homepage": "http://www.winehq.org/",
	"inherit": "models/autotools",
	"versions": [ 
		"1.7.55" 
	],
	"vfetcher": {
		"mode": "http",
		"url": [
			"https://dl.winehq.org/wine/source/1.6/",
			"https://dl.winehq.org/wine/source/1.7/",
			"https://dl.winehq.org/wine/source/1.8/",
			"https://dl.winehq.org/wine/source/1.9/"
		],
		"regexp": "wine-([0-9]+\\.[0-9]+\\.?[0-9]*\\.?[0-9]*).tar.bz2"
	},
	"md5" : {},
	"subdir": "wine-${VERSION}",
	"urls" : [
		"https://dl.winehq.org/wine/source/$(echo $VERSION | cut -d '.' -f 1-2)/wine-${VERSION}.tar.bz2"
	],
	"deps": [
		"truetype? media-libs/freetype :2",
		"capi? net-dialup/capi4k-utils",
		"ncurses? sys-libs/ncurses",
		"udisks? sys-apps/dbus",
		"fontconfig? media-libs/fontconfig",
		"gphoto2? media-libs/libgphoto2",
		"openal? media-libs/openal",
		"gstreamer? media-libs/gstreamer",
		"gstreamer? media-libs/gst-plugins-base",
		"X? x11-libs/libXcursor",
		"X? x11-libs/libXext",
		"X? x11-libs/libXrandr",
		"X? x11-libs/libXi",
		"X? x11-libs/libXxf86vm",
		"xinerama? x11-libs/libXinerama",
		"alsa? media-libs/alsa-lib",
		"cups? net-print/cups",
		"opencl? virtual/opencl",
		"opengl? virtual/glu",
		"opengl? virtual/opengl",
		"gsm? media-sound/gsm",
		"jpeg? virtual/jpeg",
		"ldap? net-nds/openldap",
		"lcms? media-libs/lcms2",
		"mp3? media-sound/mpg123",
		"netapi? net-fs/samba",
		"nls? sys-devel/gettext",
		"odbc? dev-db/unixODBC",
		"osmesa? media-libs/mesa",
		"pulseaudio? media-sound/pulseaudio",
		"xml? dev-libs/libxml2",
		"xml? dev-libs/libxslt",
		"scanner? media-gfx/sane-backends",
		"ssl? net-libs/gnutls",
		"png? media-libs/libpng",
		"v4l? media-libs/libv4l",
		"xcomposite? x11-libs/libXcomposite",
		"dos? games-emulation/dosbox",
		"perl? dev-lang/perl",
		"perl? dev-perl/XML-Simple",
		"samba? net-fs/samba",
		"selinux? sec-policy/selinux-wine",
		"udisks? sys-fs/udisks",
		"pulseaudio&realtime? sys-auth/rtkit",
		"X? x11-proto/inputproto",
		"X? x11-proto/xextproto",
		"X? x11-proto/xf86vidmodeproto",
		"xinerama? x11-proto/xineramaproto",
		"prelink? sys-devel/prelink",
		"linux-headers? sys-kernel/linux-headers",
		"virtual/pkgconfig",
		"gentoo? virtual/yacc",
		"sys-devel/flex"
	],
	"configure": {
		"": [ "--enable-win64", "--without-hal" ],
		"alsa": [ "--$with-alsa" ],
		"capi": [ "--$with-capi" ],
		"lcms": [ "--$with-cms" ],
		"cups": [ "--$with-cups" ],
		"ncurses": [ "--$with-curses" ],
		"udisks": [ "--$with-dbus" ],
		"fontconfig": [ "--$with-fontconfig" ],
		"ssl": [ "--$with-gnutls" ],
		"gecko": [ "--$enable-mshtml" ],
		"gphoto2": [ "--$with-gphoto" ],
		"gsm": [ "--$with-gsm" ],
		"gstreamer": [ "--$with-gstreamer" ],
		"jpeg": [ "--$with-jpeg" ],
		"ldap": [ "--$with-ldap" ],
		"mono": [ "--$enable-mscoree" ],
		"mp3": [ "--$with-mpg123" ],
		"netapi": [ "--$with-netapi" ],
		"nls": [ "--$with-gettext" ],
		"openal": [ "--$with-openal" ],
		"opencl": [ "--$with-opencl" ],
		"opengl": [ "--$with-opengl" ],
		"osmesa": [ "--$with-osmesa" ],
		"oss" : [ "--$with-oss" ],
		"png": [ "--$with-png" ],
		"threads": [ "--$with-pthread" ],
		"scanner": [ "--$with-sane" ],
		"test": [ "--$enable-tests" ],
		"truetype": [ "--$with-freetype" ],
		"v4l": [ "--$with-v4l" ],
		"X": [ "--$with-x" ],
		"xcomposite": [ "--$with-xcomposite" ],
		"xinerama" : [ "--$with-xinerama" ],
		"xml": [ "--$with-xml", "--$with-xslt" ]
	},
	"host": {
		"default": false,
		"debian8": [ "wine" ]
	},
	"use": [
		"gentoo",
		"linux-headers",
		"alsa",
		"capi",
		"cups",
		"custom-cflags",
		"dos",
		"elibc_glibc",
		"+fontconfig",
		"+gecko",
		"gphoto2",
		"gsm",
		"gstreamer",
		"jpeg",
		"+lcms",
		"ldap",
		"+mono",
		"mp3",
		"ncurses",
		"netapi",
		"nls",
		"odbc",
		"openal",
		"opencl",
		"opengl",
		"osmesa",
		"oss",
		"+perl",
		"+png",
		"prelink",
		"pulseaudio",
		"+realtime",
		"+run-exes",
		"samba",
		"scanner",
		"selinux",
		"+ssl",
		"test",
		"+threads",
		"+truetype",
		"udisks",
		"v4l",
		"+X",
		"xcomposite",
		"xinerama",
		"+xml"
	],
	"gentooUse": [
		"+opengl",
		"+jpeg",
		"+prelink",
		"+udisks",
		"+xcomposite"
	]
}
