{
	"name": "app-doc/doxygen",
	"homepage": "http://www.doxygen.org/",
	"inherit": "models/cmake",
	"versions": [ 
		"1.8.10"
	],
	"vfetcher": {
		"mode": "ftp",
		"url": "ftp://ftp.stack.nl/pub/users/dimitri/",
		"regexp": "doxygen-([0-9]+\\.[0-9]+\\.?[0-9]*\\.?[0-9]*).src.tar.gz"
	},
	"md5" : {},
	"subdir": "doxygen-${VERSION}",
	"urls" : [
		"ftp://ftp.stack.nl/pub/users/dimitri/doxygen-${VERSION}.src.tar.gz"
	],
	"deps": [
		"sys-devel/flex",
		"app-text/ghostscript-gpl",
		"dev-lang/perl",
		"media-libs/libpng",
		"libiconv? dev-libs/libiconv",
		"dot? media-gfx/graphviz",
		"dot? media-libs/freetype",
		"doxysearch? dev-libs/xapian",
		"latex? app-text/texlive[extra]",
		"qt4? dev-qt/qtgui:4",
		"sqlite? dev-db/sqlite:3"
		
	],
	"host": {
		"default": false,
		"debian8": [ "doxygen" ]
	},
	"configure": {
		"+debug": [ "--debug" ],
		"-debug": [ "--release" ],
		"+doxysearch": [ "--with-doxysearch" ],
		"+qt4": [ "--with-doxywizard" ],
		"+sqlite": [ "--with-sqlite3" ]
	},
	"useflags": [
		"-libiconv",
		"-dot",
		"-doxysearch",
		"-latex",
		"-qt4",
		"-sqlite",
		"-debug"
	]
}
